<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>로그인</title>
<script type="text/javascript">
	var id="id";
	var pw="password";
	
	var user_id=prompt("아이디를 입력해주세요","");
	var user_pw=prompt("비밀번호를 입력해주세요","");
	
	// 중첩 if~else 사용
	if(id==user_id){
		if(pw!=user_pw){
			alert("비밀번호가 일치하지 않습니다.");
		}else{
			document.write(user_id+"님 반갑습니다!");
			location.reload(); // 브라우저 새로고침
		}
	}else{
		alert("아이디가 일치하지 않습니다.");
		location.reload(); // 브라우저 새로고침
	}

</script>
</head>
<body>

</body>
</html>